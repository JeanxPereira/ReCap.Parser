<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ReCap.Parser.Editor.Views.Panels.FindReplacePane">
  <Border Padding="10">
    <Grid RowDefinitions="Auto,8,Auto,8,Auto,12,Auto,8,Auto"
          ColumnDefinitions="64,8,*">
      <TextBlock Grid.Row="0" Grid.ColumnSpan="3"
                 Text="Find / Replace"
                 FontWeight="SemiBold"
                 FontSize="16"/>

      <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Find"/>
      <TextBox   Grid.Row="2" Grid.Column="2"
                 MinWidth="240"
                 Text="{Binding FindText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

      <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Replace"/>
      <TextBox   Grid.Row="4" Grid.Column="2"
                 MinWidth="240"
                 Text="{Binding ReplaceText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

      <StackPanel Grid.Row="6" Grid.ColumnSpan="3" Orientation="Horizontal" Spacing="12">
        <CheckBox Content="Keys"           IsChecked="{Binding SearchInKeys}"/>
        <CheckBox Content="Values"         IsChecked="{Binding SearchInValues}"/>
        <CheckBox Content="Case sensitive" IsChecked="{Binding CaseSensitive}"/>
      </StackPanel>

      <StackPanel Grid.Row="8" Grid.ColumnSpan="3" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
        <Button Content="Prev"        Command="{Binding FindPrevCommand}"/>
        <Button Content="Next"        Command="{Binding FindNextCommand}" IsDefault="True"/>
        <Button Content="Replace"     Command="{Binding ReplaceCommand}"/>
        <Button Content="Replace All" Command="{Binding ReplaceAllCommand}"/>
      </StackPanel>
    </Grid>
  </Border>
</UserControl>
